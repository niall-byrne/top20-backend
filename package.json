{
  "name": "top20-backend",
  "license": "UNLICENSED",
  "version": "1.0.0",
  "engines": {
    "node": "v10.15.1",
    "npm": "6.4.1"
  },
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon src/server.js",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"npm server\" \"npm client\"",
    "start": "node src/server.js",
    "heroku-postbuild": "git submodule init && cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "lint": "eslint ./server.js",
    "clean": "eslint --fix src/*.js; prettier --write src/*.js"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "7.0.0",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^1.19.1",
    "prettier": "^2.0.5"
  }
}

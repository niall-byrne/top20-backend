{
  "name": "top20-backend",
  "license": "UNLICENSED",
  "version": "1.0.0",
  "engines": {
    "node": "v10.15.1",
    "npm": "6.4.1"
  },
  "scripts": {
    "serverless": "functions-framework --target=lastfm --source=./src --signature-type=http",
    "client": "cd client && pwd && npm start",
    "server": "nodemon src/server.js",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "node src/server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "lint": "eslint ./src/** --no-error-on-unmatched-pattern",
    "clean": "eslint --fix ./src/** --no-error-on-unmatched-pattern; prettier --write \"./src/**/*.+(js|jsx|json|yml|yaml|css|scss|md|vue)\"",
    "test": "jest --verbose",
    "coverage": "jest --coverage --coverageDirectory=coverage"
  },
  "jest": {
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^1.5.1",
    "axios": "^0.19.2",
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "cors": "2.8.5",
    "dotenv": "7.0.0",
    "express": "^4.16.4",
    "express-sslify": "^1.2.0",
    "express-winston": "^4.0.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "nodemon": "^1.19.1",
    "prettier": "^2.0.5"
  }
}
